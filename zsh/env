# vi: ft=zsh

# vi-mode go to differents modes faser
export KEYTIMEOUT=1
# add brew and packages to PATH
export PATH="/usr/local/bin:/opt/homebrew/bin:$PATH"
# Preferred editor for local sessions
export EDITOR="nvim"
# LANG=""
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
# for gpg
export GPG_TTY=$TTY

# Load Bitwarden secrets for shell and Claude Code
[ -f ~/.zsh/bitwarden-secrets.zsh ] && source ~/.zsh/bitwarden-secrets.zsh
